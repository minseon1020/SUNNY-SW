<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.future.my.dao.IEnergyDAO">
	
	<select id="getCityEnergy" resultType="com.future.my.vo.EnergyVO" parameterType="com.future.my.vo.EnergyVO">
		SELECT a.CITY_ID,
			   b.CITY_NAME,
			   a.COUNTY_ID,
			   c.COUNTY_NAME,
			   a.YEAR_MONTH,
			   a.USE_ELECT,
			   a.USE_GAS
	    FROM ENERGY_DATA a, CITY b, COUNTY c
		WHERE a.CITY_ID = b.CITY_ID AND a.COUNTY_ID = c.COUNTY_ID
		AND  a.CITY_ID = #{cityId}
	</select>
	
	<select id="getCountyEnergy" resultType="com.future.my.vo.EnergyVO" parameterType="com.future.my.vo.EnergyVO">
		SELECT a.CITY_ID,
			   b.CITY_NAME,
			   a.COUNTY_ID,
			   c.COUNTY_NAME,
			   a.YEAR_MONTH,
			   a.USE_ELECT,
			   a.USE_GAS
	    FROM ENERGY_DATA a, CITY b, COUNTY c
		WHERE a.CITY_ID = b.CITY_ID AND a.COUNTY_ID = c.COUNTY_ID
		AND  a.COUNTY_ID = #{countyId}
	
	</select>


	<select id="getCountryEnergy" resultType="com.future.my.vo.EnergyVO">
				SELECT a.CITY_ID,
			   b.CITY_NAME,
			   a.COUNTY_ID,
			   c.COUNTY_NAME,
			   a.YEAR_MONTH,
			   a.USE_ELECT,
			   a.USE_GAS
	    FROM ENERGY_DATA a, CITY b, COUNTY c
		WHERE a.CITY_ID = b.CITY_ID AND a.COUNTY_ID = c.COUNTY_ID
		AND  a.CITY_ID = 0 AND a.COUNTY_ID = 0
	
	</select>

</mapper>