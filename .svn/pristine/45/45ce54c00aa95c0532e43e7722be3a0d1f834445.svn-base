.dashboard {
  padding: 30px 60px;
  margin-top: 20px;
  background-color: #fafbfc;
}

.dashboard h1 {
  font-size: 28px;
  margin-bottom: 10px;
  color: #222;
}

.dashboard p {
  color: #555;
  margin-bottom: 26px;
  line-height: 1.6;
}

/* ğŸ§© ë©”ì¸ 4ì¹¸ ë ˆì´ì•„ì›ƒ */
.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-auto-rows: auto;     /* ë†’ì´ ìë™ ì¡°ì • */
  gap: 26px;
}

/* ğŸ§± ì¹´ë“œ ê³µí†µ ìŠ¤íƒ€ì¼ */
.card {
  background: #fff;
  border-radius: 14px;
  padding: 24px 28px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  text-align: left;
}

.card h3 {
  font-size: 17px;
  margin-bottom: 10px;
  color: #333;
  font-weight: 700;
}

/* ğŸ—º ì§€ë„ ì¹´ë“œ */
.card.map { height: 460px; }

.card.map .leaflet-container {
  flex: 1;
  height: 400px !important;
  width: 100% !important;
  border-radius: 12px;
}

/* ğŸ“Š ì°¨íŠ¸ ì¹´ë“œ */
.card.chart {
  height: 520px;
  display: flex;
  flex-direction: column;
}
.card.chart canvas {
  flex: 1;
  width: 100% !important;
  height: 400px !important;
}

/* ğŸ“¦ ì°¨íŠ¸ í”Œë ˆì´ìŠ¤í™€ë”(ì„ì‹œ ìë¦¬ í‘œì‹œ) */
.chart-placeholder {
  height: 250px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f4f5f7;
  border-radius: 8px;
  color: #999;
  font-size: 16px;
}

/* ğŸ› íƒ­ ë²„íŠ¼ */
.main-tabs,
.sub-tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  margin-top: 10px;
}

button {
  padding: 7px 16px;
  border-radius: 20px;
  border: 1px solid #d0d0d0;
  background: #f7f8fa;
  color: #333;
  cursor: pointer;
  font-weight: 600;
  font-size: 13.5px;
  transition: all 0.2s ease-in-out;
}
button:hover { background: #e7ecf4; }
button.active {
  background: #007bff;
  color: #fff;
  border-color: #007bff;
}

/* ì§€ë„ ì¹´ë“œì˜ ì˜¤ë¥¸ìª½ ì•„ë˜ ì €ì‘ê¶Œ í‘œê¸° ìˆ¨ê¹€ */
.dashboard .card:nth-of-type(1) .leaflet-control-attribution {
  display: none !important;
}

/* ğŸ§­ ë°˜ì‘í˜• */
@media (max-width: 1200px) {
  .dashboard-grid {
    grid-template-columns: 1fr;
    grid-auto-rows: auto;
  }
  .card.map { height: 420px; }
  .card.chart { height: 480px; }
}
